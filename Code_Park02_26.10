qut_rodas =  int(input('Quantas rodas possui seu veículo?'))
peso =  int(input('Qual o peso do seu veículo?'))
qut_passageiros = int(input('Quantos passaageiros seu veículo suporta?'))

if (qut_rodas <= 3):
    print ('Seu veículo pertence a Categoria de Habilitação A')
elif (peso <= 3500 and qut_passageiros<=8 and qut_rodas==4):
    print ('Seu veículo pertence a Categoria de Habilitação B')
elif (peso>3500 and peso<=6000 and qut_rodas>=4 and qut_passageiros <=8):
    print ('Seu veículo pertence a Categoria de Habilitação C')
elif (qut_rodas>=4 and qut_passageiros>8):
    print ('Seu veículo pertence a Categoria de Habilitação D')
elif (qut_rodas>=4 and peso>6000):
    print ('Seu veículo pertence a Categoria de Habilitação E')
else:
    print ("ERRO!")
